<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/about_crdroid">

    <!-- crDroid Changelog -->
    <PreferenceScreen
        android:key="crdroid_changelog"
        android:icon="@drawable/changelog_icon"
        android:title="@string/changelog_crdroid_title"
        android:summary="@string/changelog_crdroid_summary"
        android:fragment="com.crdroid.settings.fragments.Changelog" />

    <!-- crDroid Share -->
    <PreferenceScreen
        android:key="crdroid_share"
        android:icon="@drawable/share_icon"
        android:title="@string/share_crdroid_title"
        android:summary="@string/share_crdroid_summary" />

    <!-- crDroid Source -->
    <PreferenceScreen
        android:key="crdroid_source"
        android:icon="@drawable/source_icon"
        android:title="@string/crdroid_source_title"
        android:summary="@string/crdroid_source_summary" />

    <!-- crDroid GooglePlus -->
    <PreferenceScreen
        android:key="crdroid_google_plus"
        android:icon="@drawable/gplus_icon"
        android:title="@string/crdroid_google_plus_title"
        android:summary="@string/crdroid_google_plus_summary" />

    <!-- crDroid Maintainers -->
    <PreferenceScreen
        android:key="crdroid_maintainers"
        android:icon="@drawable/maintainers_icon"
        android:title="@string/maintainers_crdroid_title"
        android:summary="@string/maintainers_crdroid_summary"
        android:fragment="com.crdroid.settings.fragments.Maintainers" />

    <!-- crDroid Drill -->
    <PreferenceScreen
        android:key="crdroid_drill"
        android:icon="@drawable/drill_icon"
        android:title="@string/drill_title"
        android:summary="@string/drill_summary"
        android:fragment="com.crdroid.settings.fragments.Drill" />
</PreferenceScreen>
